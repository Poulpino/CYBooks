<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    FXML file describing the user interface of the most borrowed books scene view.
    This view displays a list of the most borrowed books and provides an option to navigate back to the main books section.
-->

<BorderPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group.projetcybooks.client.scene.MostBorrowedController">

    <!-- Center of the BorderPane -->
    <center>
        <!-- GridPane to arrange elements -->
        <GridPane alignment="BOTTOM_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="100.0" minWidth="300.0" prefHeight="1080.0" prefWidth="1920.0" BorderPane.alignment="CENTER">
            <!-- Column constraints -->
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <!-- Row constraints -->
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <!-- ListView to display most borrowed books -->
            <children>
                <ListView fx:id="bookListView" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2" />
            </children>
        </GridPane>
    </center>

    <!-- Top of the BorderPane -->
    <top>
        <!-- SplitPane to arrange title label and back button -->
        <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <!-- Label for the title -->
                <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="10.0" minWidth="10.0" text="Most borrowed books" textAlignment="CENTER">
                    <font>
                        <Font size="60.0" />
                    </font>
                </Label>
                <!-- Button to navigate back to the main books section -->
                <Button mnemonicParsing="false" onAction="#switchToBooksMain" prefHeight="109.0" prefWidth="328.0" text="Back">
                    <font>
                        <Font size="45.0" />
                    </font>
                </Button>
            </items>
        </SplitPane>
    </top>

</BorderPane>
