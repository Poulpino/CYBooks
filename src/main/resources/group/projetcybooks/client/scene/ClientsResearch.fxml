<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    FXML file describing the user interface of the client research view.
    This view allows users to search for client profiles, display the search results, and perform actions such as editing or deleting profiles.
-->

<BorderPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group.projetcybooks.client.scene.ClientsResearchController">

   <!-- Top of the BorderPane -->
   <top>
      <!-- SplitPane to arrange elements at the top -->
      <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <!-- Title of the view -->
            <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" 
                   minHeight="10.0" minWidth="10.0" text="                     Search Client" textAlignment="CENTER">
               <font>
                  <Font size="60.0" />
               </font>
            </Label>
            <!-- Back button -->
            <Button mnemonicParsing="false" onAction="#switchToClientsMain" prefHeight="109.0" prefWidth="328.0" text="Back">
               <font>
                  <Font size="45.0" />
               </font>
            </Button>
         </items>
      </SplitPane>
   </top>
   
   <!-- Center of the BorderPane -->
   <center>
      <!-- SplitPane to arrange elements at the center -->
      <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <!-- SplitPane for search fields and action buttons -->
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
               <items>
                  <!-- GridPane for search fields -->
                  <GridPane>
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="450.0" minWidth="10.0" prefWidth="330.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="692.0" minWidth="10.0" prefWidth="626.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <!-- Labels for search fields -->
                        <Label text="First name" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                           <font>
                              <Font size="54.0" />
                           </font>
                        </Label>
                        <Label text="Last name" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                           <font>
                              <Font size="54.0" />
                           </font>
                        </Label>
                        <Label text="Phone" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                           <font>
                              <Font size="54.0" />
                           </font>
                        </Label>
                        <!-- TextAreas for entering search criteria -->
                        <TextArea fx:id="firstNameField" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" />
                        <TextArea fx:id="lastNameField" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextArea fx:id="phoneField" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <!-- SplitPane for action buttons -->
                  <SplitPane dividerPositions="0.5, 0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
                     <items>
                        <!-- Buttons for search, delete, and edit actions -->
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleSearch" prefHeight="153.0" prefWidth="552.0" text="Search" textAlignment="CENTER">
                           <font>
                              <Font size="40.0" />
                           </font>
                           <opaqueInsets>
                              <Insets bottom="50.0" />
                           </opaqueInsets>
                        </Button>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleDelete" prefHeight="153.0" prefWidth="552.0" text="Delete profile" textAlignment="CENTER">
                           <font>
                              <Font size="40.0" />
                           </font>
                           <opaqueInsets>
                              <Insets bottom="50.0" />
                           </opaqueInsets>
                        </Button>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#switchToClientsEdit" prefHeight="153.0" prefWidth="552.0" text="Edit profile" textAlignment="CENTER">
                           <font>
                              <Font size="40.0" />
                           </font>
                           <opaqueInsets>
                              <Insets bottom="50.0" />
                           </opaqueInsets>
                        </Button>
                     </items>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </SplitPane>
               </items>
            </SplitPane>
            <!-- SplitPane for displaying search results and borrow history -->
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
               <items>
                  <!-- ListView for displaying search results -->
                  <ListView fx:id="userListView" prefHeight="200.0" prefWidth="200.0" />
                  <!-- Button to display borrow history -->
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#switchToClientsBorrowHistory" prefHeight="117.0" prefWidth="598.0" text="Display borrow history">
                     <font>
                        <Font size="40.0" />
                     </font>
                  </Button>
               </items>
            </SplitPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
