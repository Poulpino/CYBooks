<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    FXML file describing the user interface of the main scene view.
    This view serves as the home page of the application and provides options to navigate to different sections such as clients, books, borrow, and late return.
-->

<BorderPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group.projetcybooks.client.scene.MainSceneController">

    <!-- Center of the BorderPane -->
    <center>
        <!-- GridPane to arrange buttons for navigation -->
        <GridPane alignment="BOTTOM_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="100.0" minWidth="300.0" prefHeight="1080.0" prefWidth="1920.0" BorderPane.alignment="CENTER">
            <!-- Column constraints -->
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <!-- Row constraints -->
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <!-- Buttons for navigation -->
            <children>
                <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="100.0" maxWidth="900.0" minHeight="20.0" minWidth="100.0" mnemonicParsing="false" onAction="#switchToClientsMain" text="Clients" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                    <font>
                        <Font size="45.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="100.0" maxWidth="900.0" minHeight="20.0" minWidth="100.0" mnemonicParsing="false" onAction="#switchToBooksMain" text="Books" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                    <font>
                        <Font size="45.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="100.0" maxWidth="900.0" minHeight="20.0" minWidth="100.0" mnemonicParsing="false" onAction="#switchToBorrowMain" text="Borrow" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                    <font>
                        <Font size="45.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="100.0" maxWidth="900.0" minHeight="20.0" minWidth="100.0" mnemonicParsing="false" onAction="#switchToLateReturn" text="Late return" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                    <font>
                        <Font size="45.0" />
                    </font>
                </Button>
            </children>
        </GridPane>
    </center>

    <!-- Top of the BorderPane -->
    <top>
        <!-- Label for the home page title -->
        <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="10.0" minWidth="10.0" text="Home" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <!-- Set margin for top and bottom -->
            <BorderPane.margin>
                <Insets bottom="30.0" top="50.0" />
            </BorderPane.margin>
            <font>
                <Font size="60.0" />
            </font>
        </Label>
    </top>

</BorderPane>
